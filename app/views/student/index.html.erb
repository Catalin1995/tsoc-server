<% @students.each do |student|%>
  <% if @counter % 4 != 0 %>
    <div class="col-xs-3">
      <%= link_to student.email, student_path(student) %>
      <% @counter = @counter + 1 %>
    </div>
  <% else %>
    </div>
    <div class='row'>
    <div class="col-xs-3">
      <%= link_to student.email, student_path(student) %>
      <% @counter = @counter + 1 %>
    </div>
  <% end %>
<% end %>