<div class="row">
    <div class="title-page">
      <h1 class="title" align='center'> List of courses </h1>
    </div>
</div>

<br><br><br>

<div class='row', align = 'center'>
  
  <% @courses.each_with_index do |course, i| %>
    <% if i % 4 == 0 %>
      </div>
      <div class='row', align='center' >
    <% end %>
    
    <div class='col-xs-3'>
      <%= link_to image_tag(course.image, :height => "50%", :width => "50%"), course_path(course) %><br>
      <h3> <%= link_to course.title, course_path(course) %> </h3><br>
    </div>
    <% end %>
</div>
