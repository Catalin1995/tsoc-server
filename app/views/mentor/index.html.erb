<% @mentors.each do |mentor|%>
  <% if @counter % 4 != 0 %>
    <div class="col-xs-3">
      <%= link_to mentor.email, mentor_path(mentor) %>
      <% @counter = @counter + 1 %>
    </div>
  <% else %>
    </div>
    <div class='row'>
    <div class="col-xs-3">
      <%= link_to mentor.email, mentor_path(mentor) %>
      <% @counter = @counter + 1 %>
    </div>
  <% end %>
<% end %>