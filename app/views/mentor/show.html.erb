<div class='row'>
  <div class='col-xs-3'>
    <%= image_tag(@user.image, :height => "100%", :width => "100%") %>
  </div>


  <div class="col-xs-9">
    <h3> Email: <%= @user.email %> </h3>
    <h3> Name: <% if @user.name == nil %>
        -------------------
      <% else %>
        <%= @user.name %>
      <% end %><br>
    </h3>
  </div>
</div>